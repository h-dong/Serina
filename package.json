{
  "name": "serina",
  "version": "1.0.0",
  "description": "Natural Language Parser for date and time in Javascript",
  "main": "index.js",
  "scripts": {
    "dev": "rollup --config --watch",
    "build": "npm run lint && npm run test:build && npm run clean && rollup --config",
    "build:prod": "rollup ./src/serina.ts --o ./dist/serina.js --f iife",
    "docs": "npm run build && npm run build:docs",
    "build:docs": "./scripts/build-doc.sh",
    "clean": "rm -rf ./dist && mkdir dist",
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "lint:fix": "tslint --fix -c tslint.json \"src/**/*.ts\"",
    "test": "jest --watchAll",
    "test:build": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hdong92/Serina.git"
  },
  "keywords": [
    "javascript",
    "library",
    "javascript-library",
    "natural-language-processing",
    "date-parser",
    "time-parsing"
  ],
  "author": "Hao Dong (dong_hao@hotmail.co.uk)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hdong92/Serina/issues"
  },
  "homepage": "https://github.com/hdong92/Serina#readme",
  "dependencies": {
    "luxon": "^1.17.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/luxon": "^1.15.2",
    "babel-preset-es2015-rollup": "^3.0.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rollup": "^1.20.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.24.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.6.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "modulePaths": [
      "src"
    ]
  }
}
