{
  "name": "serina",
  "version": "0.1.0",
  "description": "Natural Language Parser for date and time in Javascript",
  "main": "index.js",
  "scripts": {
    "dev": "rollup --config --watch",
    "build": "npm run lint && npm run test && rollup --config",
    "build:prod": "rollup ./src/serina.ts --o ./dist/serina.js --f iife",
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "lint:fix": "tslint --fix -c tslint.json \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "jest:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hdong92/Serina.git"
  },
  "keywords": [
    "javascript",
    "library",
    "javascript-library",
    "natural-language-processing",
    "date-parser",
    "time-parsing"
  ],
  "author": "Hao Dong (dong_hao@hotmail.co.uk)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hdong92/Serina/issues"
  },
  "homepage": "https://github.com/hdong92/Serina#readme",
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "babel-preset-es2015-rollup": "^3.0.0",
    "jest": "^21.2.1",
    "rollup": "^0.50.0",
    "rollup-plugin-typescript2": "^0.8.0",
    "ts-jest": "^21.1.4",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.6.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts", "js"
    ],
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.js$": "babel-jest"
    }
  }
}
